<Alloy>
    <TableViewRow id="row" backgroundColor="#000" height="70" model="{alloy_id}" video_id="{video_id}" video_title="{video_title}" video_excerpt="{video_excerpt}" video_url="{video_url}" video_provider="{video_provider}" video_image_path="{video_image_path}" selectionStyle="NONE" filter="{video_title}">
        <View id="rowContainer">
            <View id="playVideo" width="80" left="0">
                <View id="play"></View>
                <ImageView id="loadingImgView" image="{video_image_path}"/>
            </View>

             <View id="infoVideo" width="50%" layout="vertical" left="80">
                <Label id="title" text="{video_title}"/>
                <Label id="provider" text="{video_provider}" />
                <Label id="excerpt" text="{video_excerpt}" />
            </View>

            <Label id="lblCloseMe" />

            <View id="sourceBar"></View>

            <View id="coinView" width="70" backgroundColor="#000" right="0">
                <Label id="lblRowCoin" />
                <Button id="btnRowCoin" />
            </View>

        </View>
    </TableViewRow>
</Alloy>